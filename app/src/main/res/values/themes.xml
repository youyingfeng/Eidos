<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eidos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TODO: Use the default material colors for easier life
        colorPrimary: color displayed most frequently across app screens. I guess this is the
                      default interface color?
        colorPrimaryVariant: variant shade
        colorOnPrimary:

        Basically treat these as alternate names for whatever you wanna use. colorPrimary can be
        used as many or as little times as you want it.
        -->
    </style>
</resources>